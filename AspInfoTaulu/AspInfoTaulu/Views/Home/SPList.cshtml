            <tr>
                <th><h3>AIHE</h3></th>
                <th><h3>ASIA</h3></th>                
            </tr>
        </thead>
        <tbody>
            @if (@Model.ShareList.Count > 0)
            {
                for (int i = 0; i < @Model.ShareList.Count; i++)
                {
                    <tr>
                        <td  style="vertical-al*ign:text-top; text-align:left;"><h3>@Model.ShareList[i].Otsikko</h3></td>
                        <td style="vertical-align:text-top; text-align:left;"><h3>@Model.ShareList[i].Teksti</h3></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td><h3>@Model.Message</h3></td>
                </tr>
            }
        </tbody>
    </table>
    

    <table cellspacing="10" align="center">
